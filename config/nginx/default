upstream backend {
	server 127.0.0.1:8081;
}

proxy_cache_path /var/lib/nginx/cache levels=1:2 keys_zone=cache:30m max_size=1G;
proxy_temp_path /var/lib/nginx/proxy 1 2;
proxy_ignore_headers Expires Cache-Control;
proxy_cache_use_stale error timeout invalid_header http_502;
proxy_cache_bypass $cookie_session;
proxy_no_cache $cookie_session;

server {
    listen 80;

    root /home/mikhail/Projects/ask_mmasyagin;

    index index.html;

    location / {
        proxy_pass http://backend;
        proxy_cache cache;
        proxy_cache_valid 10m;
        proxy_cache_valid 404 1m;
        proxy_redirect off;
        proxy_set_header Host $server_name;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location ^~ /uploads/ {
        alias /home/mikhail/Projects/ask_mmasyagin/uploads/;
    }

    location ~* ^.+\.(css|jpg|jpeg|png|js|html)$ {
        root /home/mikhail/Projects/ask_mmasyagin/static;
    }
}
